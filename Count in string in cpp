#include<bits/stdc++.h>
#include<string.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    string s;
    char k;
    for(int i=0;i<t;i++){
        cin>>s;
        cin>>k;
        int c=0;
        for(int i=0;i<s.length();i++){
            if(s[i]==k){
                c=c+1;
            }
        }
        cout<<c<<endl;
    }
}
